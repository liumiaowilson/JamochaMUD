[Setup]
AppName=JamochaMUD
AppVerName=JamochaMUD JMUDLevel JMUDVersion
AppPublisher=Jeff Robinson
AppPublisherURL=http://jamochamud.anecho.mb.ca
AppSupportURL=http://jamochamud.anecho.mb.ca
AppUpdatesURL=http://jamochamud.anecho.mb.ca
DefaultDirName={pf}\anecho
DisableDirPage=yes
DefaultGroupName=JamochaMUD
AllowNoIcons=yes
LicenseFile=PACKARCHIVEPATH\binary\anecho\JamochaMUD\Copying
InfoBeforeFile=PACKARCHIVEPATH\zipdesc
; uncomment the following line if you want your installation to run on NT 3.51 too.
; MinVersion=4,3.51
OutputBaseFilename=JamochaMUD-JMUDLevel-JMUDVersion

[Tasks]
Name: "desktopicon"; Description: "Create a &desktop icon"; GroupDescription: "Additional icons:"; MinVersion: 4,4

